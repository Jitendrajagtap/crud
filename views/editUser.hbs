{{> header}}
<div id="wrapper">
        <!-- Navigation -->
{{> sidebar}}
<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Edit User</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <!-- /.panel-heading -->
                        <div class="panel-heading">Edit User</div>
                        <div class="panel-body">
                            <!-- /.table-responsive -->
                            <div class="row">
                                <div class="col-lg-6">
                                    <form id="editUser" action="/edit-user-action?_method=put" method="POST">
                                    <input type="hidden" name="_method" value="PUT">
                                        <input type="hidden" name="_id" value="{{user_record._id}}">
                                        <div class="form-group">
                                            <label>Full Name *</label>
                                            <input type="text" name="full_name" required id="fullName" class="form-control" value="{{user_record.full_name}}">
                                        </div>
                                        <div class="form-group">
                                            <label>Email Id *</label>
                                            <input type="text" name="email_id" id="email_id" class="form-control" value="{{user_record.email_id}}">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Save</button>
                                        <a href="/" class="btn btn-success">Back</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
        <!-- /#page-wrapper -->
</div>
<div id="scripts">
    <script>
        $('#addUser').validate({
            rules:{
                fullName:{
                    required:true
                },
                email_id:{
                    required:true,
                    email:true
                }
            }
        });
    </script>
</div>
{{> footer}}